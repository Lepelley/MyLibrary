{% extends 'base.html.twig' %}

{% block title %}
    Liste des catégories de DVDs
{% endblock %}

{% block body %}
    <div class="container mt-2">
        <h1>Liste des catégories de DVDs</h1>

        <a href="{{ path('dvd_type_create') }}" class="btn btn-primary mt-2">Créer une catégorie</a>

        <table class="table table-hover table-striped mt-2">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for type in types %}
            <tr>
                <td>{{ type.name }}</td>
                <td>
                    <a href="{{ path('dvd_type_edit', {id: type.id}) }}" class="btn btn-primary">
                        Modifier
                    </a>
                    <a href="{{ path('dvd_type_delete', {id: type.id}) }}" class="btn btn-danger"
                       onclick="return confirm('Voulez-vous supprimer la catégorie &laquo; {{ type.name }} &raquo; ?')">
                        Supprimer
                    </a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
